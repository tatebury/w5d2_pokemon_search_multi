{% extends 'base.html.j2' %}

{% block title %}
Pokemon Stats
{% endblock %}

{% block content %}
<p>Please enter the name(s) of any base Pokemon below. (separated by commas ",")</p>
<form action="/pokemon" method="POST">
  {{ form.hidden_tag() }}
  {# name section #}
  {{ form.name.label(class="form-label") }}
  {{ form.name(class="form-control") }}

  {{ form.submit(class="btn btn-primary") }}
</form>
{% if error %}
    <small style="color:red;">{{error}}</small>
{% else %}
    <small style="color:red;"></small>
{% endif %}
{% if pokemon %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Base XP</th>
                <th scope="col">HP</th>
                <th scope="col">Defense</th>
                <th scope="col">Attack</th>
                <th scope="col">Sprite URL</th>
            </tr>
        </thead>
        <tbody>
        {% for poke in pokemon %}
            <tr>
                <th scope="row">{{poke['name']}}</th>
                <td>{{poke['base_xp']}}</td>
                <td>{{poke['hp']}}</td>
                <td>{{poke['defense']}}</td>
                <td>{{poke['attack']}}</td>
                <td>{{poke['url']}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}
{% endblock %}